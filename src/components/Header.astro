---
import Navigation from './Navigation.astro';
import Hamburger from './Hamburger.astro';
import ThemeIcon from './ThemeIcon.astro';
//const basePath = "/~cmuntz/";
import Social from './Social.astro';
import { basePath } from "../config";
const { isBlogPost } = Astro.props;
---

<header class:list={["site-header", { "restricted-width": isBlogPost }]}>
  <div class="header-controls">
    <ThemeIcon />
    <Hamburger />
  </div>

  <div class="header-main">
    <a href={basePath}>
        <img src={`${basePath}assets/ACFNImg.png`} 
         alt="Adaptive Computing Field Notes" class="site-logo" 
        />
    </a>
    <Navigation basePath={basePath} />
  </div>
</header>
