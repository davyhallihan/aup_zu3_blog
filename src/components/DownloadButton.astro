---
//const basePath = "/~cmuntz/";
import { basePath } from "../config";
const { fileUrl, label = "Download", fileName } = Astro.props;
---

<a href={fileUrl} download={fileName || undefined} class="download-btn">
  <img
    src={`${basePath}assets/icons/downloadWhite.svg`}
    alt=""
    class="download-icon"
  />
  {label}
</a>

<style>
  .download-btn {
    background-color: #51755d;
    color: #ebe1ca;
    border: none;
    padding: 0.5rem 1rem; /* Adjusted padding */
    font-size: 1rem;
    cursor: pointer;
    border-radius: 10px;
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    transition: background-color 0.2s ease;
    text-decoration: none; /* Remove underline */
    line-height: 1.2; /* Ensure normal line height */
    margin: 0.25rem 0; /* Add some vertical spacing */
    width: fit-content; /* Ensure it doesn't stretch */
  }

  .download-btn:hover {
    background-color: #3f5a48;
    color: #ebe1ca; /* Ensure text color stays */
  }

  .download-icon {
    width: 18px;
    height: 18px;
  }
</style>
