---
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "Adaptive Computing Field Notes";
import { basePath } from "../config";
---

<BaseLayout pageTitle={pageTitle}>
	<div class="home-content">
		<img 
			src={`${basePath}/assets/ACFNImg.png`}
			alt="AUP-ZU3 development board close-up"
			class="home-image"
		/>
		<h2>Field notes from a curious mind navigating adaptive computing.</h2>
		<p>
			Hello world! Join us as we explore and document our adventures with
			hardware projects! This blog is part lab journal, part guide, and part
			curiosity for anyone interested in hardware, FPGA design, and tinkering
			within code and circuits.
		</p>
	</div>

	<style>
		.home-content {
			display: flex;
			flex-direction: column;
			align-items: center;
			text-align: center;
			width: 100%; /* Ensure full width */
		}

		.home-image {
			width: 60%;
			max-width: 200px;
			height: auto;
			margin-bottom: 2rem;
		}

		/* Override align-items for text elements to allow them to fill width if needed, 
		   but keeping them centered via text-align is usually enough. 
		   However, to prevent the "squashed" look, we ensure the container is wide.
		*/
		
		p {
			max-width: 60ch; /* Optimal reading width */
			margin-left: auto;
			margin-right: auto;
		}
	</style>

</BaseLayout>
